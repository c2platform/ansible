#!/bin/bash
# {{ ansible_managed }}
{% for rl in backup_roles_node %}
{%  for schdl in backup['schedules_default'] %}
{%     if backup_roles[rl]['keep'][item] > 0 %}
/opt/backup/bin/backup perform --trigger {{ rl }}_{{ schdl}}_{{ vars[rl + '_version'] | replace('.','_') | replace('-','_') }} --config-file /etc/backup/config.rb --log-path=/var/log > /dev/null
{%     endif%}
{%   endfor %}
{% endfor %}
